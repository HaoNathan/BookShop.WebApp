@model BookShop.WebApp.Areas.Admin.Models.UserViewModel.UserListViewModel
@{
    ViewBag.Title = "Detail";
}
<div class="layui-fluid">
    <div class="layui-form">
        <!-- 提示：如果你不想用form，你可以换成div等任何一个普通元素 -->

        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">用户姓名</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" value="@Model.Name" placeholder="请输入" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-form-item">

                <label class="layui-form-label">用户昵称</label>
                <div class="layui-input-inline">
                    <input type="text"  value="@Model.LoginId" placeholder="请输入" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>

        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">出生日期</label>
                <div class="layui-input-inline">
                    @{
                        if (Model.Birthday.Value.ToString("yyyy-MM-dd").Equals("1900-1-1"))
                        {
                             <input type="text" id="date"  lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                        }
                        else
                        {
                            <input type="text" id="date" value=" @Model.Birthday.Value.ToString("yyyy-MM-dd")" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                        }
                    }

                </div>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">住址</label>
                <div class="layui-input-inline">
                    <input type="text"  value="@Model.Address" placeholder="请输入" autocomplete="off" class="layui-input">

                </div>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">电话</label>
                <div class="layui-input-inline">
                    <input type="text" name="Phone" value="@Model.Phone" placeholder="请输入" autocomplete="off" class="layui-input">

                </div>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">邮箱</label>
                <div class="layui-input-inline">
                    <input type="text" name="Mail" value="@Model.Mail" placeholder="请输入" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-form-item">
                <label class="layui-form-label">单行选择框</label>
                <div class="layui-input-inline">
                    <select name="UserRoleId" lay-filter="aihao">
                        @{
                            if (Model.UserRoleId == 1)
                            {
                                <option value="0" checked>普通用户</option>
                            }
                            else
                            {
                                <option value="1" checked>会员</option>
                            }
                        }

                    </select>
                </div>
            </div>
        </div>
        <br />
        <div class="layui-input-block" style="float: right;margin-right: 30px ">
            <div class="layui-form-item">
                <button class="layui-btn" id="btnExit"><i class="layui-icon layui-icon-ok"></i> 返回</button>
            </div>
        </div>
    </div>

</div>
@section js
{
    <script>
        layui.use(['jquery', 'layer', 'form', 'laydate'],
            function () {
                var layer = layui.layer;
                var form = layui.form;
                $ = layui.$;
                var laydate = layui.laydate;
                laydate.render({
                    elem: '#date'
                });
            });

    </script>
}



